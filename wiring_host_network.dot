graph "Host network" {

  graph [
    rankdir=TB,
    nodesep=0.8,
    ranksep=1.5,
    bgcolor="white",
    label="Host network",
    labelloc=t,
    fontsize=16,
    fontname="Sinkin Sans 400 Regular"
  ];

  node [
    shape=box,
    style="rounded,filled",
    fillcolor="#E8F4F8",
    fontsize=12,
    fontname="Sinkin Sans 400 Regular",
    margin=0.2
  ];

  edge [
    color="#5897fc",
    style=solid,
    penwidth=2.5
  ];

  // Compute
  subgraph cluster_tier1_rack1_front {
    label="Rack 1 Front";
    style=dashed;
    color="#999999";
    fontname="Sinkin Sans 400 Regular";

    "Operator_PC" [
      label="Operator PC",
      fillcolor="#ced3db"
    ];
    "Speedgoat" [
      label="Speedgoat",
      fillcolor="#519AB5"
    ];
  }

  { rank=same; "Operator_PC"; "Speedgoat"; }

  // Connections
  "Operator_PC" -- "Speedgoat" [
    color="#5897fc", style=solid, penwidth=2.5, label="  Host  ", fontsize=10, fontname="Sinkin Sans 400 Regular"
  ];

}