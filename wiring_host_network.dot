graph "Host network" {

  graph [
    rankdir=TB,
    nodesep=0.5,
    ranksep=1.0,
    bgcolor="white",
    label="Host network",
    labelloc=t,
    fontsize=16,
    fontname="Sinkin Sans"
  ];

  node [
    shape=box,
    style="rounded,filled",
    fillcolor="#E8F4F8",
    fontsize=12,
    fontname="Sinkin Sans",
    margin=0.2
  ];

  edge [
    color="#5897fc",
    style=solid,
    penwidth=2.5
  ];

  // Devices organized by rack

  subgraph cluster_rack1_front {
    label="Rack 1 Front";
    style=filled;
    color="#F0F0F0";
    fontname="Sinkin Sans";
    margin=15;

    "Operator_PC" [
      label="Operator PC",
      fillcolor="#ced3db"
    ];
    "Speedgoat" [
      label="Speedgoat",
      fillcolor="#519AB5"
    ];

    // Vertical stacking within rack
    "Operator_PC" -- "Speedgoat" [style=invis];
  }

  // Connections between devices

  "Operator_PC" -- "Speedgoat" [
    color="#5897fc", style=solid, penwidth=2.5, label="  Host  ", fontsize=10, fontname="Sinkin Sans"
  ];

}