graph "Company network" {

  graph [
    rankdir=TB,
    nodesep=0.5,
    ranksep=1.0,
    bgcolor="white",
    label="Company network",
    labelloc=t,
    fontsize=16,
    fontname="Sinkin Sans"
  ];

  node [
    shape=box,
    style="rounded,filled",
    fillcolor="#E8F4F8",
    fontsize=12,
    fontname="Sinkin Sans",
    margin=0.2
  ];

  edge [
    color="#151617",
    style=solid,
    penwidth=2.5
  ];

  // Devices organized by rack

  subgraph cluster_rack1_front {
    label="Rack 1 Front";
    style=filled;
    color="#F0F0F0";
    fontname="Sinkin Sans";
    margin=15;

    "Operator_PC" [
      label="Operator PC",
      fillcolor="#ced3db"
    ];
    "Telemetry_PC" [
      label="Telemetry PC",
      fillcolor="#ced3db"
    ];

    // Vertical stacking within rack
    "Operator_PC" -- "Telemetry_PC" [style=invis];
  }

  // External devices
  "Company_switch" [
    label="Company switch"
  ];

  // Connections between devices

  "Company_switch" -- "Telemetry_PC" [
    color="#151617", style=solid, penwidth=2.5
  ];
  "Company_switch" -- "Operator_PC" [
    color="#151617", style=solid, penwidth=2.5
  ];

}