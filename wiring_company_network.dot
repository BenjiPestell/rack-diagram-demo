graph "Company network" {

  graph [
    rankdir=TB,
    nodesep=0.8,
    ranksep=1.5,
    bgcolor="white",
    label="Company network",
    labelloc=t,
    fontsize=16,
    fontname="Sinkin Sans 400 Regular"
  ];

  node [
    shape=box,
    style="rounded,filled",
    fillcolor="#E8F4F8",
    fontsize=12,
    fontname="Sinkin Sans 400 Regular",
    margin=0.2
  ];

  edge [
    color="#151617",
    style=solid,
    penwidth=2.5
  ];

  // Sources
  // Sources - External
  "Company_switch" [
    label="Company switch"
  ];

  // Compute
  subgraph cluster_tier1_rack1_front {
    label="Rack 1 Front";
    style=dashed;
    color="#999999";
    fontname="Sinkin Sans 400 Regular";

    "Operator_PC" [
      label="Operator PC",
      fillcolor="#ced3db"
    ];
    "Telemetry_PC" [
      label="Telemetry PC",
      fillcolor="#ced3db"
    ];
  }

  { rank=same; "Company_switch"; }
  { rank=same; "Telemetry_PC"; "Operator_PC"; }

  // Connections
  "Company_switch" -- "Telemetry_PC" [
    color="#151617", style=solid, penwidth=2.5
  ];
  "Company_switch" -- "Operator_PC" [
    color="#151617", style=solid, penwidth=2.5
  ];

}