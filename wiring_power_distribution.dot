graph "Power Distribution" {

  graph [
    rankdir=TB,
    nodesep=0.5,
    ranksep=1.0,
    bgcolor="white",
    label="Power Distribution",
    labelloc=t,
    fontsize=16,
    fontname="Arial Bold"
  ];

  node [
    shape=box,
    style="rounded,filled",
    fillcolor="#E8F4F8",
    fontsize=12,
    fontname="Arial",
    margin=0.2
  ];

  edge [
    color="#151617",
    style=solid,
    penwidth=4.0
  ];

  // Devices by rack
    "Audio___terrain" [
      label="Audio / terrain",
      fillcolor="#ced3db"
    ];
    "Beckhoff___com_PC" [
      label="Beckhoff / com PC",
      fillcolor="#ced3db"
    ];
    "Dedi_server" [
      label="Dedi server",
      fillcolor="#ced3db"
    ];
    "Fibre___network" [
      label="Fibre / network",
      fillcolor="#FFFFFF"
    ];
    "Operator_PC" [
      label="Operator PC",
      fillcolor="#ced3db"
    ];
    "Physics_PC" [
      label="Physics PC",
      fillcolor="#ced3db"
    ];
    "Speedgoat" [
      label="Speedgoat",
      fillcolor="#519AB5"
    ];
    "Telemetry_PC" [
      label="Telemetry PC",
      fillcolor="#ced3db"
    ];

  // External devices
  "PDU-A" [
    label="PDU-A"
  ];
  "PDU-B" [
    label="PDU-B"
  ];

  // Connections
  "PDU-A" -- "Beckhoff___com_PC" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-A" -- "Operator_PC" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-A" -- "Physics_PC" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-B" -- "Dedi_server" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-B" -- "Speedgoat" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-B" -- "Telemetry_PC" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-B" -- "Audio___terrain" [
    color="#151617", style=solid, penwidth=4.0
  ];
  "PDU-A" -- "Fibre___network" [
    color="#151617", style=solid, penwidth=4.0
  ];

}